{
    "name": "influxdb-dlang-wrapper",
    "authors": [
        "Atila Neves"
    ],
    "dependencies": {
        "vibe-d": "~>0.7.30"
    },
    "description": "InfluxDB wrapper",
    "copyright": "Copyright Â© 2017, Atila Neves",
    "license": "BSD 3-clause",
    "targetType": "library",
    "sourcePaths": ["source"],

    "configurations": [

        {"name": "library" },

        {
            "name": "unittest",
            "targetType": "executable",
            "targetName": "bin/ut",
            "preBuildCommands": ["dub run unit-threaded -c gen_ut_main -- -f bin/ut.d"],
            "mainSourceFile": "bin/ut.d",
            "dependencies": {
                "unit-threaded": "~>0.7.6"
            }
        },
        {
            "name": "integration",
            "targetType": "executable",
            "targetName": "bin/it",
            "sourcePaths": ["integration"],
            "mainSourceFile": "bin/it.d",
            "dflags": ["-unittest"],
            "dependencies": {
                "unit-threaded": "~>0.7.6"
            }

        }

    ]

}
